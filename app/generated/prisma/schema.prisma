// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
  // Further reading:
  // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
  // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
  url      = env("DATABASE_URL")
}

enum UserRole {
  OWNER
  STRATEGY
  CONTENT
  OPERATIONS
}

enum ClientProfileStatus {
  ACTIVE
  ARCHIVED
}

enum RbacModule {
  CLIENTS
  DISCOVERY
  AUDIT
  STRATEGY
  CONTENT
  IMPLEMENTATION
  REPORTING
  SETTINGS
  GOVERNANCE
}

enum KlaviyoSyncStatus {
  IN_PROGRESS
  OK
  FAILED_AUTH
  PARTIAL_OR_TIMEOUT
}

enum SyncTrigger {
  MANUAL
  DAILY
}

enum KlaviyoEntityType {
  ACCOUNT
  FLOW
  EMAIL
  FORM
}

model Post {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdBy   User   @relation(fields: [createdById], references: [id])
  createdById String

  @@index([name])
}

// Necessary for Next auth
model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String? // @db.Text
  access_token             String? // @db.Text
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String? // @db.Text
  session_state            String?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  refresh_token_expires_in Int?

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                         String                @id @default(cuid())
  name                       String?
  email                      String?               @unique
  emailVerified              DateTime?
  image                      String?
  role                       UserRole              @default(OWNER)
  accounts                   Account[]
  sessions                   Session[]
  posts                      Post[]
  memberships                ClientMembership[]
  contexts                   ClientUserContext[]
  strategicDecisions         StrategicDecision[]
  discoveryOnboardingUpdates DiscoveryOnboarding[]
  discoveryAnswers           DiscoveryAnswer[]
  auditLogs                  AuditLog[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model ClientProfile {
  id         String              @id @default(cuid())
  name       String
  status     ClientProfileStatus @default(ACTIVE)
  archivedAt DateTime?           @map("archived_at")
  createdAt  DateTime            @default(now()) @map("created_at")
  updatedAt  DateTime            @updatedAt @map("updated_at")

  memberships         ClientMembership[]
  contexts            ClientUserContext[]
  strategicDecisions  StrategicDecision[]
  discoveryOnboarding DiscoveryOnboarding?
  klaviyoSyncRuns     KlaviyoSyncRun[]
  klaviyoInventory    KlaviyoInventoryItem[]

  @@index([name], map: "idx_client_profiles_name")
  @@index([status], map: "idx_client_profiles_status")
  @@map("client_profiles")
}

model StrategicDecision {
  id        String   @id @default(cuid())
  clientId  String   @map("client_id")
  authorId  String   @map("author_id")
  content   String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  client ClientProfile @relation(fields: [clientId], references: [id], onDelete: Cascade)
  author User          @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([clientId, createdAt], map: "idx_strategic_decisions_client_created_at")
  @@index([authorId], map: "idx_strategic_decisions_author_id")
  @@map("strategic_decisions")
}

model ClientMembership {
  id        String   @id @default(cuid())
  clientId  String   @map("client_id")
  userId    String   @map("user_id")
  canEdit   Boolean  @default(false) @map("can_edit")
  createdAt DateTime @default(now()) @map("created_at")

  client ClientProfile @relation(fields: [clientId], references: [id], onDelete: Cascade)
  user   User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([clientId, userId], map: "uq_client_memberships_client_user")
  @@index([userId], map: "idx_client_memberships_user_id")
  @@map("client_memberships")
}

model ClientUserContext {
  id           String   @id @default(cuid())
  userId       String   @map("user_id")
  clientId     String   @map("client_id")
  lastViewPath String?  @map("last_view_path")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  user   User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  client ClientProfile @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@unique([userId, clientId], map: "uq_client_user_context_user_client")
  @@index([clientId], map: "idx_client_user_context_client_id")
  @@map("client_user_context")
}

model DiscoveryOnboarding {
  id                    String    @id @default(cuid())
  clientId              String    @unique @map("client_id")
  updatedById           String    @map("updated_by_id")
  answerCount           Int       @default(0) @map("answer_count")
  isGoalsComplete       Boolean   @default(false) @map("is_goals_complete")
  isSegmentsComplete    Boolean   @default(false) @map("is_segments_complete")
  isSeasonalityComplete Boolean   @default(false) @map("is_seasonality_complete")
  isOfferComplete       Boolean   @default(false) @map("is_offer_complete")
  isComplete            Boolean   @default(false) @map("is_complete")
  completedAt           DateTime? @map("completed_at")
  createdAt             DateTime  @default(now()) @map("created_at")
  updatedAt             DateTime  @updatedAt @map("updated_at")

  client    ClientProfile     @relation(fields: [clientId], references: [id], onDelete: Cascade)
  updatedBy User              @relation(fields: [updatedById], references: [id], onDelete: Cascade)
  answers   DiscoveryAnswer[]

  @@index([updatedById], map: "idx_discovery_onboarding_updated_by_id")
  @@index([isComplete], map: "idx_discovery_onboarding_is_complete")
  @@map("discovery_onboarding")
}

model DiscoveryAnswer {
  id          String   @id @default(cuid())
  discoveryId String   @map("discovery_id")
  authorId    String   @map("author_id")
  questionKey String   @map("question_key")
  answerText  String   @map("answer_text")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  discovery DiscoveryOnboarding @relation(fields: [discoveryId], references: [id], onDelete: Cascade)
  author    User                @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@unique([discoveryId, questionKey], map: "uq_discovery_answers_discovery_question")
  @@index([authorId], map: "idx_discovery_answers_author_id")
  @@index([questionKey], map: "idx_discovery_answers_question_key")
  @@map("discovery_answers")
}

model RbacPolicy {
  id        String     @id @default(cuid())
  role      UserRole
  module    RbacModule
  canView   Boolean    @default(false) @map("can_view")
  canEdit   Boolean    @default(false) @map("can_edit")
  canManage Boolean    @default(false) @map("can_manage")
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")

  @@unique([role, module], map: "uq_rbac_policies_role_module")
  @@index([role], map: "idx_rbac_policies_role")
  @@map("rbac_policies")
}

model AuditLog {
  id         String   @id @default(cuid())
  actorId    String?  @map("actor_id")
  eventName  String   @map("event_name")
  requestId  String   @map("request_id")
  entityType String?  @map("entity_type")
  entityId   String?  @map("entity_id")
  details    Json?
  createdAt  DateTime @default(now()) @map("created_at")

  actor User? @relation(fields: [actorId], references: [id], onDelete: SetNull)

  @@index([eventName, createdAt], map: "idx_audit_log_event_created_at")
  @@index([actorId], map: "idx_audit_log_actor_id")
  @@index([requestId], map: "idx_audit_log_request_id")
  @@map("audit_log")
}

model KlaviyoSyncRun {
  id           String            @id @default(cuid())
  clientId     String            @map("client_id")
  trigger      SyncTrigger
  status       KlaviyoSyncStatus
  requestId    String            @map("request_id")
  startedAt    DateTime          @default(now()) @map("started_at")
  finishedAt   DateTime?         @map("finished_at")
  accountCount Int               @default(0) @map("account_count")
  flowCount    Int               @default(0) @map("flow_count")
  emailCount   Int               @default(0) @map("email_count")
  formCount    Int               @default(0) @map("form_count")
  errorCode    String?           @map("error_code")
  errorMessage String?           @map("error_message")

  client ClientProfile @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@index([clientId, startedAt], map: "idx_klaviyo_sync_runs_client_started_at")
  @@index([requestId], map: "idx_klaviyo_sync_runs_request_id")
  @@map("klaviyo_sync_runs")
}

model KlaviyoInventoryItem {
  id         String            @id @default(cuid())
  clientId   String            @map("client_id")
  entityType KlaviyoEntityType @map("entity_type")
  externalId String            @map("external_id")
  name       String
  itemStatus String            @default("OK") @map("item_status")
  lastSyncAt DateTime          @map("last_sync_at")
  updatedAt  DateTime          @updatedAt @map("updated_at")

  client ClientProfile @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@unique([clientId, entityType, externalId], map: "uq_klaviyo_inventory_client_entity_external")
  @@index([clientId, entityType], map: "idx_klaviyo_inventory_client_entity")
  @@map("klaviyo_inventory_items")
}
